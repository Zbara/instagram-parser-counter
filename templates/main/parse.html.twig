{% extends 'base.html.twig' %}
{% block title 'Парсинг информации Instagram' %}
{% block header 'Парсинг информации Instagram' %}
{% block main %}
    <div class="row row-deck row-cards">
        <div class="col-md-6 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Введите данные</h3>
                </div>
                <div class="card-body">
                    <div id="alert"></div>
                    {{ form_start(form, {'action': path('app_parse'), 'attr': {'id': 'parseForm'}}) }}
                    <div class="row">
                        <div class="mb-3">
                            <label class="form-label">{{ form_label(form.login) }}</label>
                            {{ form_row(form.login) }}
                        </div>
                    </div>
                    <div class="form-footer">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="col-md-12 col-lg-8">
            <div class="card" style="height: calc(29rem + 10px)">
                <div class="card-header">
                    <h3 class="card-title">Список аккаунтов</h3>
                </div>
                <div class="card-body card-body-scrollable card-body-scrollable-shadow">
                    <table class="table table-vcenter">
                        <thead>
                        <tr>
                            <td>Login</td>
                            <td>Аватар</td>
                            <td>Подписки</td>
                            <td>Подписчики</td>
                            <td>Фото</td>
                        </tr>
                        </thead>
                        <tbody id="parseInstagram">
                        {% for item in users %}
                            {{ include('main/parse.items.html.twig', {
                                item: item
                            }) }}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
